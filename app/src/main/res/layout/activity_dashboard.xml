<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard"
    tools:context=".Dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:weightSum="1"
            android:padding="10dp"
            android:background="@color/logoBg">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_gravity="center"
                android:src="@drawable/ic_nustwaterqualitylogo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:maxLines="1"
                android:padding="10dp"
                android:text="Water Quality Monitoring"
                android:fontFamily="@font/brittanicbold"
                android:autoSizeTextType="uniform"
                app:autoSizeTextType="uniform"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="0.9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginVertical="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.5"
                    android:background="#FFFFFF"
                    android:outlineAmbientShadowColor="@color/colorAccent"
                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    app:layout_collapseMode="pin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            android:src="@drawable/ic_table_chart_24px"
                            android:tint="@color/fgColor"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:autoSizeTextType="uniform"
                            android:padding="5dp"
                            android:text="Realtime Tables"
                            android:textAlignment="center"
                            android:textColor="@color/fgColor"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="0.3"
                            android:autoSizeTextType="uniform"
                            android:padding="5dp"
                            android:text="View Realtime Data in Data Tables"
                            android:textAlignment="center"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/card1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></FrameLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginVertical="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.5"
                    android:background="#FFFFFF"

                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    app:layout_collapseMode="pin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            android:src="@drawable/ic_table_chart_24px"
                            android:tint="@color/fgColor"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:autoSizeTextType="uniform"
                            android:padding="5dp"
                            android:text="Historical Tables"
                            android:textAlignment="center"
                            android:textColor="@color/fgColor"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="0.3"
                            android:autoSizeTextType="uniform"
                            android:padding="5dp"
                            android:text="View Historical Data in Data Tables"
                            android:textAlignment="center"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/card2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></FrameLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="horizontal"
                android:weightSum="1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginVertical="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="0.5"
                    android:background="#FFFFFF"

                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    app:layout_collapseMode="pin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            android:src="@drawable/ic_timeline_24px"
                            android:tint="@color/fgColor"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:autoSizeTextType="uniform"
                            android:padding="5dp"
                            android:text="Realtime Charts"
                            android:textAlignment="center"
                            android:textColor="@color/fgColor"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="0.3"
                            android:autoSizeTextType="uniform"
                            android:padding="5dp"
                            android:text="Analyze Realtime Data Trends with Charts"
                            android:textAlignment="center"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/card3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></FrameLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginVertical="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.5"
                    android:background="#FFFFFF"

                    android:theme="@style/ThemeOverlay.AppCompat.Light"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    app:layout_collapseMode="pin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            android:src="@drawable/ic_timeline_24px"
                            android:tint="@color/fgColor"></ImageView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"
                            android:autoSizeTextType="uniform"
                            android:padding="5dp"
                            android:text="Historical Charts"
                            android:textAlignment="center"
                            android:textColor="@color/fgColor"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginHorizontal="2dp"
                            android:layout_weight="0.3"
                            android:autoSizeTextType="uniform"
                            android:padding="5dp"
                            android:text="Analyze Historical Data Trends with Charts"
                            android:textAlignment="center"
                            app:autoSizeTextType="uniform" />
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/card4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></FrameLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>